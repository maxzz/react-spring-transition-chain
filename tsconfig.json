{
    "compilerOptions": {
        "outDir": "build/dist",
        "module": "esnext",
        "target": "es2020",
        "lib": [ "es6", "dom" ],
        "sourceMap": true,
        "allowJs": true,
        "skipLibCheck": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
}